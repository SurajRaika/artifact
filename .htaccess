RewriteEngine On

###############################################
# 1. Block /app/* completely
###############################################
RewriteRule ^app/ - [F]


###############################################
# 2. Allow only .php, .js, .css files
#    Block ALL other file types
###############################################

# If request is for an existing file...
RewriteCond %{REQUEST_FILENAME} -f

# ...but its extension is NOT php|js|css â†’ block it
RewriteCond %{REQUEST_FILENAME} !\.(php|js|css)$ [NC]
RewriteRule ^ - [F]


###############################################
# 3. Unknown routes -> 404.php
###############################################

# Allow existing folders
RewriteCond %{REQUEST_FILENAME} !-d

# Allow only php|js|css above; everything else goes to 404
RewriteCond %{REQUEST_FILENAME} !-f

RewriteRule ^.*$ /404.php [L]






##################################################
#
# DO NOT EDIT THIS FILE
#
# Create a new .htaccess file in your htdocs
# directory (or example.com/htdocs/ directory)
# to add your own rules or override these rules.
#
##################################################


DirectoryIndex index.php index.html index.htm index2.html

ErrorDocument 403 https://artifact.wuaze.com/404.php
ErrorDocument 404 https://artifact.wuaze.com/404.php
ErrorDocument 500 https://artifact.wuaze.com/404.php